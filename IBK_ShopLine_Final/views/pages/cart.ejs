                        <div class="product-item">
                            <div class="pi-pic">
                                <div class="tag-new">Novo</div>
                                <img src="./img/product/2.jpg" alt="">
                                <div class="pi-links">
                                    <a href="#" class="add-card"><i class="flaticon-bag"></i><span>ADICIONAR NO CARRINHO</span></a>
                                    <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a>
                                </div>
                            </div>
                            <div class="pi-text">
