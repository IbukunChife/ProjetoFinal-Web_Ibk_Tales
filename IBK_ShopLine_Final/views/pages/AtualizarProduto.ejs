<%- contentFor('body') %>
<div class="container">
<div class="pageCadastrarProduto">

    <h4>ATUALIZANDO UM PRODUTO</h4>
    <hr/>

    <form action="/api/product_atualizar/<%= product._id%>" method="POST" class="form-vertical  js-form-loading">
		
        <div class="form-group">
            <label for="title">Nome</label>
            <input
                type="title"
                id="title"
                name="title"
                value="<%= product.title%>"
                class="form-control"
            />
        </div>
    
        <div class="form-group">
            <label for="description">Descrição</label>
            <textarea  
                type="description"
                id="description"
                name="description"
                placeholder="<%= product.description%>"
                class="form-control"
            >
            <%= product.description%>
            </textarea>
        </div>
    
        <div class="row">
            
            <div class="col-sm-2">
                <div class="form-group">
                    <label for="price">Preço unitário</label>
                    <input 
                        type="price"
                        id="price"
                        name="price"
                        value="<%= product.price%>"
                        class="form-control"
                    />
                </div>
            </div>
    
            <div class="col-sm-2">
                <div class="form-group">
                    <label for="slug">slug</label>
                    <input 
                        type="slug"
                        id="slug"
                        name="slug"
                        value="<%= product.slug%>"
                        class="form-control"
                    />
                </div>
            </div>
            
            <div class="col-sm-2">
                <div class="form-group">
                    <label for="active">Imagem</label>
                    <input 
                        type="file"
                        name="images"
                        value="<%= product.images%>"
                    />
                </div>
            </div>
        
        </div>
        
        <div class="form-group">
            <button class="btn  btn-primary" type="submit">Editar</button>
            <a href="/" class="btn  btn-default">Cancelar</a>
        </div>
    
    </form>

</div>
</div>

